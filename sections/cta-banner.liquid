<div class="flex flex-col items-center py-16">
    <h2 class="">{{section.settings.cta_title}}</h2>
    <p>{{section.settings.cta_content}}</p>
    <a href="{{section.settings.cta_link}}">{{section.settings.cta_text}}</a>
</div>    
{% schema %}
{
    "name": "Call To Action Banner",
    "settings": [
        {
            "type": "text",
            "id": "cta_title",
            "label": "Heading"
        },
        {
            "type": "textarea",
            "id": "cta_content",
            "label": "Content"
        },
        {
            "type": "text",
            "id": "cta_text",
            "label": "CTA Text"
        },
        {
            "type": "url",
            "id": "cta_link",
            "label": "Link"
        }
    ]
}
{% endschema %}