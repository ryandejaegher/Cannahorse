<div class="flex flex-col items-center py-64 bg-gray-200">
    <h2 class="font-semibold text-5xl">{{section.settings.cta_title}}</h2>
    <p class="max-w-5xl text-center text-xl font-semibold">{{section.settings.cta_content}}</p>
    <a class="font-semibold" href="{{section.settings.cta_link}}">{{section.settings.cta_text}}</a>
</div>    
{% schema %}
{
    "name": "Call To Action Banner",
    "settings": [
        {
            "type": "text",
            "id": "cta_title",
            "label": "Heading"
        },
        {
            "type": "textarea",
            "id": "cta_content",
            "label": "Content"
        },
        {
            "type": "text",
            "id": "cta_text",
            "label": "CTA Text"
        },
        {
            "type": "url",
            "id": "cta_link",
            "label": "Link"
        }
    ]
}
{% endschema %}